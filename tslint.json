{
    "extends": [
        "tslint-eslint-rules"
    ],
    "rules": {
        "semicolon": [true, "never"],
        "no-extra-semi": true,
        "indent": [true, "spaces", 4],
        "no-consecutive-blank-lines": true,
        "trailing-comma": [true, {
            "multiline": "always",
            "singleline": "never"
        }],
        "space-in-parens": [true, "never"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-module",
            "check-separator",
            "check-rest-spread",
            "check-type",
            "check-typecast",
            "check-type-operator",
            "check-preblock"
        ],
        "no-trailing-whitespace": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-else",
            "check-catch",
            "check-finally",
            "check-whitespace"
        ],
        "curly": true,
        "object-curly-spacing": [
            true,
            "always"
        ],
        "one-variable-per-declaration": true,
        "prefer-const": true
    }
}
