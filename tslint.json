{
  "extends": [
    "tslint-eslint-rules",
    "tslint:latest",
    "tslint-react",
    "tslint-react-hooks"
  ],
  "cliOptions": {
    "exclude": [
      "node_modules"
    ]
  },
  "rules": {
    "semicolon": [true, "always"],
    "no-extra-semi": true,
    "indent": [true, "spaces", 4],
    "no-consecutive-blank-lines": true,
    "trailing-comma": [true, {
      "multiline": {
        "objects": "always",
        "arrays": "always",
        "functions": "ignore",
        "typeLiterals": "ignore",
        "imports": "always",
        "exports": "always"
      },
      "singleline": "never"
    }],
    "space-in-parens": [true, "never"],
    "array-bracket-spacing": [true, "never"],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-rest-spread",
      "check-type",
      "check-typecast",
      "check-type-operator",
      "check-preblock"
    ],
    "no-trailing-whitespace": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-else",
      "check-catch",
      "check-finally",
      "check-whitespace"
    ],
    "no-multi-spaces": true,
    "curly": true,
    "object-curly-spacing": [
      true,
      "always"
    ],
    "one-variable-per-declaration": true,
    "variable-name": [
      true,
      "check-format",
      "allow-leading-underscore",
      "allow-trailing-underscore",
      "allow-pascal-case",
      "ban-keywords"
    ],
    "prefer-const": true,
    "no-empty-interface": true,
    "no-var-keyword": true,
    "no-unused-variable": [true, "check-parameters"],
    "prefer-method-signature": true,
    "quotemark": {
      "options": ["single", "jsx-double"],
      "severity": "error"
    },
    "ordered-imports": false,
    "no-console": {
      "severity": "warn"
    },
    "object-literal-sort-keys": false,
    "no-submodule-imports": false,
    "member-access": false,
    "jsx-no-multiline-js": false,
    "react-hooks-nesting": "error",
    "no-implicit-dependencies": false,
    "jsx-boolean-value": [true, "never"],
    "arrow-parens": [true, "ban-single-arg-parens"]
  }
}
